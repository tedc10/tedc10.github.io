<section class="py-24">

  <!-- BARRA NEGRA SUPERIOR (CUALIDADES) -->
  <div class="w-full bg-black text-white py-6 overflow-hidden mb-20">
    <div class="flex gap-16 animate-marquee whitespace-nowrap text-lg md:text-xl font-semibold tracking-wide">
      <span>RESPONSABLE</span>
      <span>AMOROSO</span>
      <span>LÍDER</span>
      <span>RESPETUOSO</span>
      <span>APASIONADO</span>
      <span>ALEGRE</span>
      <span>EMPÁTICO</span>
      <span>DISCIPLINADO</span>
      <span>COMPROMETIDO</span>
      <span>CREATIVO</span>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-6">

    <!-- TITULO -->
    <div class="text-center mb-12">
      <p class="uppercase tracking-[6px] text-sm font-bold">
        PERSONAL
      </p>

      <h2 class="text-5xl md:text-6xl font-extrabold mt-4">
        Mi inspiración
      </h2>

      <p class="text-lg md:text-xl mt-6 max-w-2xl mx-auto">
        Todos necesitamos un poco de inspiración para construir lo que somos.
      </p>
    </div>

    <!-- GRID DE IMAGENES -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-12 mt-16">

      <!-- BUGGY -->
      <div class="border-4 border-black bg-white p-6 shadow-[8px_8px_0px_black] hover:scale-105 transition duration-300">
        <img src="/buggy.jpeg" alt="Buggy" class="w-full h-64 object-cover object-center" />
        <p class="mt-4 text-xl font-bold">Mi vida</p>
      </div>

      <!-- MESSI -->
      <div class="border-4 border-black bg-white p-6 shadow-[8px_8px_0px_black] hover:scale-105 transition duration-300">
        <img src="/messi.jpeg" alt="Messi" class="w-full h-64 object-cover object-center" />
        <p class="mt-4 text-xl font-bold">Messi</p>
      </div>

      <!-- LIVERPOOL -->
      <div class="border-4 border-black bg-white p-6 shadow-[8px_8px_0px_black] hover:scale-105 transition duration-300">
        <img src="/liverpool.jpeg" alt="Liverpool" class="w-full h-64 object-cover object-center" />
        <p class="mt-4 text-xl font-bold">Liverpool FC</p>
      </div>

      <!-- BAD BUNNY -->
      <div class="border-4 border-black bg-white p-6 shadow-[8px_8px_0px_black] hover:scale-105 transition duration-300">
        <img src="/badbunny.jpeg" alt="Bad Bunny" class="w-full h-64 object-cover object-center" />
        <p class="mt-4 text-xl font-bold">Bad Bunny</p>
      </div>

      <!-- MORA -->
      <div class="border-4 border-black bg-white p-6 shadow-[8px_8px_0px_black] hover:scale-105 transition duration-300">
        <img src="/mora.jpeg" alt="Mora" class="w-full h-64 object-cover object-center" />
        <p class="mt-4 text-xl font-bold">Mora</p>
      </div>

    </div>

  </div>
</section>

<style>
@keyframes marquee {
  0% { transform: translateX(0%); }
  100% { transform: translateX(-50%); }
}

.animate-marquee {
  animation: marquee 20s linear infinite;
}
</style>
