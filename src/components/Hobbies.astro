---

<section class="w-full pt-2 pb-16">

  <!-- BARRA SUPERIOR -->
  <div class="w-full border-y-4 border-black bg-black text-white overflow-hidden">
    <div class="marquee flex gap-16 py-7 text-xl md:text-2xl font-bold uppercase whitespace-nowrap">
      {[...qualities, ...qualities].map((w) => (
        <span class="inline-flex items-center gap-4">
          <span class="text-[var(--yellow)] text-2xl">‚ú¶</span>
          {w}
        </span>
      ))}
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-6 mt-14">

    <!-- TITULO -->
    <h2 class="text-5xl md:text-6xl font-extrabold">
