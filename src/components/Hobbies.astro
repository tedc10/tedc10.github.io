    </p>

    <!-- COLLAGE -->
    <div class="mt-14 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12">
      {items.map((it) => (
        <article class={`relative ${it.rotate} transition-all duration-300 hover:rotate-0 hover:scale-[1.03]`}>
          <div class="border-4 border-black bg-white p-4 shadow-[12px_12px_0px_black]">

            <img
              src={it.img}
              alt={it.title}
              class={`w-full h-[280px] object-cover ${it.pos} border-2 border-black`}
              loading="lazy"
            />

            <div class="mt-4 flex items-center justify-between gap-3">
              <h3 class="text-2xl font-bold">{it.title}</h3>
              <span class="text-sm font-bold border-2 border-black px-3 py-1 bg-blue-200">
                {it.tag}
              </span>
            </div>

          </div>
        </article>
      ))}
    </div>

  </div>

</section>

<style>
  .marquee {
    animation: marquee 13s linear infinite;
    will-change: transform;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>
