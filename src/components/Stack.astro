---
const groups = [
  {
    title: "Backend",
    items: [
      { name: "Java", img: "/javitaback.png" },
      { name: "Python", img: "/python.png" },
      { name: "Node.js", img: "/nodejs.png" },
    ],
  },
  {
    title: "Frontend",
    items: [
      { name: "HTML", img: "/html.png" },
      { name: "CSS", img: "/css.png" },
      { name: "Angular", img: "/angular.png" },
      { name: "JavaScript", img: "/java.png" },
    ],
  },
  {
    title: "Base de Datos",
    items: [{ name: "MySQL", img: "/mysql.png" }],
  },
  {
    title: "Herramientas",
    items: [{ name: "GitHub", img: "/github.png" }],
  },
]
---

<section class="max-w-6xl mx-auto px-6 py-24">

  <!-- TITULO NUEVO (SIN AMARILLO) -->
  <div class="text-center mb-16">
    <p class="uppercase tracking-[6px] text-sm font-bold">
      STACK
    </p>
    <h2 class="text-5xl md:text-6xl font-extrabold mt-4">
      Tecnolog√≠as que utilizo
    </h2>
    <div class="w-24 h-[3px] bg-black mx-auto mt-6"></div>
  </div>

  <!-- GRUPOS -->
  <div class="grid gap-14">
    {groups.map((g) => (
      <div>
        <div class="flex items-center gap-4 mb-8">
          <h3 class="text-3xl font-bold">{g.title}</h3>
          <div class="flex-1 h-[2px] bg-black/20"></div>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-10">
          {g.items.map((tech) => (
            <div class="flex flex-col items-center transition-all duration-300 hover:scale-110">
              <div class="border-4 border-black bg-white p-6 shadow-[8px_8px_0px_black]">
                <img
                  src={tech.img}
                  alt={tech.name}
                  class="w-20 h-20 object-contain"
                  loading="lazy"
                />
              </div>
              <p class="mt-4 text-lg font-bold">{tech.name}</p>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>

</section>
