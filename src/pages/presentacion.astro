---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---

<Layout>
  <Header />

  <section class="relative min-h-[70vh] flex flex-col items-center justify-center text-center px-6 py-10 overflow-hidden">

    <!-- FONDO CON MÁS PALABRAS -->
    <div class="absolute inset-0 grid grid-cols-4 md:grid-cols-6 gap-6 place-items-center 
                opacity-10 text-2xl md:text-3xl font-bold 
                pointer-events-none select-none">

      <span>ORACLE</span>
      <span>MYSQL</span>
      <span>SQL</span>
      <span>NOSQL</span>
      <span>UML</span>
      <span>REACT</span>
      <span>SPRING</span>
      <span>POSTGRES</span>
      <span>API REST</span>
      <span>JSON</span>
      <span>ERD</span>
      <span>GIT</span>
      <span>DATABASE</span>
      <span>TAILWIND</span>
      <span>NODE</span>
      <span>ASTRO</span>
      <span>BACKEND</span>
      <span>FRONTEND</span>
      <span>JWT</span>
      <span>DOCKER</span>
      <span>MODELADO</span>
      <span>DIAGRAMAS</span>
      <span>QUERY</span>
      <span>OPTIMIZACIÓN</span>

    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="relative z-10">

      <h1 class="text-5xl md:text-7xl font-extrabold border-4 border-black px-8 py-6 bg-white shadow-[8px_8px_0px_black]">
        Algo más sobre mí
      </h1>

      <a 
        href="https://youtu.be/7p4uv-mc2v4"
        target="_blank"
        class="mt-8 inline-block text-2xl md:text-3xl font-bold bg-yellow-300 border-4 border-black px-12 py-5 shadow-[8px_8px_0px_black] hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition-all duration-200"
      >
        Ver video completo
      </a>

    </div>

  </section>

  <Footer />
</Layout>
